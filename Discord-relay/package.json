{
  "name": "discord-relay",
  "version": "0.2.0",
  "description": "HTTP to Discord bridge for switch events",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "check": "node --check src/index.js",
    "validate": "node validate-config.js",
    "test:scripts": "./test-scripts.sh",
    "configure": "./configure.sh",
    "quickstart": "./quickstart.sh",
    "pm2:start": "npm run validate && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop discord-relay",
    "pm2:restart": "pm2 restart discord-relay",
    "pm2:delete": "pm2 delete discord-relay",
    "pm2:logs": "pm2 logs discord-relay",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "pino": "^9.14.0",
    "undici": "^6.22.0"
  }
}
